<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <solid android:color="#E8F5E9"/> <!-- очень мягкий зелёный -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#A5D6A7"/>

    <!-- Optional padding внутри -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>

</shape>
